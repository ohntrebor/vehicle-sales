{
  "info": {
    "name": "Vehicle Resale API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Vehicles",
      "item": [
        {
          "name": "Create Vehicle",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"brand\": \"Toyota\",\n  \"model\": \"Corolla\",\n  \"year\": 2022,\n  \"color\": \"Prata\",\n  \"price\": 95000.00\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/vehicles",
              "host": ["{{baseUrl}}"],
              "path": ["api", "vehicles"]
            }
          }
        },
        {
          "name": "Update Vehicle",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": \"{{vehicleId}}\",\n  \"brand\": \"Toyota\",\n  \"model\": \"Corolla Cross\",\n  \"year\": 2023,\n  \"color\": \"Branco\",\n  \"price\": 120000.00\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/vehicles/{{vehicleId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "vehicles", "{{vehicleId}}"]
            }
          }
        },
        {
          "name": "Get Available Vehicles",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/vehicles/available",
              "host": ["{{baseUrl}}"],
              "path": ["api", "vehicles", "available"]
            }
          }
        },
        {
          "name": "Get Sold Vehicles",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/vehicles/sold",
              "host": ["{{baseUrl}}"],
              "path": ["api", "vehicles", "sold"]
            }
          }
        },
        {
          "name": "Register Sale",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"vehicleId\": \"{{vehicleId}}\",\n  \"buyerCpf\": \"12345678901\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/vehicles/sale",
              "host": ["{{baseUrl}}"],
              "path": ["api", "vehicles", "sale"]
            }
          }
        },
        {
          "name": "Payment Webhook - Confirm",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"paymentCode\": \"{{paymentCode}}\",\n  \"status\": \"confirmed\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/vehicles/payment-webhook",
              "host": ["{{baseUrl}}"],
              "path": ["api", "vehicles", "payment-webhook"]
            }
          }
        },
        {
          "name": "Payment Webhook - Cancel",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"paymentCode\": \"{{paymentCode}}\",\n  \"status\": \"cancelled\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/vehicles/payment-webhook",
              "host": ["{{baseUrl}}"],
              "path": ["api", "vehicles", "payment-webhook"]
            }
          }
        }
      ]
    },
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/health",
              "host": ["{{baseUrl}}"],
              "path": ["api", "health"]
            }
          }
        },
        {
          "name": "Liveness",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/health/live",
              "host": ["{{baseUrl}}"],
              "path": ["api", "health", "live"]
            }
          }
        },
        {
          "name": "Readiness",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/health/ready",
              "host": ["{{baseUrl}}"],
              "path": ["api", "health", "ready"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "vehicleId",
      "value": "",
      "type": "string"
    },
    {
      "key": "paymentCode",
      "value": "",
      "type": "string"
    }
  ]
}